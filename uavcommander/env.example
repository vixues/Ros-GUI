# UAV Commander 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ============================================================================
# LLM API Keys
# ============================================================================

# OpenAI API Key (必需，如果使用 GPT 模型)
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI API Base URL (可选，用于代理或自定义端点)
# OPENAI_API_BASE=https://api.openai.com/v1

# Anthropic API Key (可选，如果使用 Claude 模型)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google AI API Key (可选，如果使用 Gemini 模型)
GOOGLE_API_KEY=your-google-api-key

# Azure OpenAI (可选)
# AZURE_OPENAI_API_KEY=your-azure-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# ============================================================================
# 系统配置
# ============================================================================

# 默认 LLM 模型
UAV_DEFAULT_MODEL=gpt-4

# 运行环境: development, testing, simulation, production
UAV_ENVIRONMENT=development

# 审批模式: strict, normal, yolo
UAV_APPROVAL_MODE=normal

# 调试模式
UAV_DEBUG=true

# 日志级别: DEBUG, INFO, WARNING, ERROR
UAV_LOG_LEVEL=INFO

# ============================================================================
# Agent 配置
# ============================================================================

# 最大对话轮次
UAV_MAX_TURNS=50

# 启用流式输出
UAV_ENABLE_STREAMING=true

# 工具执行超时（秒）
UAV_TOOL_TIMEOUT=60

# 最大并发工具调用数
UAV_MAX_CONCURRENT_TOOLS=5

# ============================================================================
# ROS 2 配置
# ============================================================================

# ROS 发行版
ROS_DISTRO=humble

# DDS 域 ID
ROS_DOMAIN_ID=0

# 节点名称
UAV_NODE_NAME=uav_commander

# 仿真模式
UAV_SIMULATION=false

# ============================================================================
# 安全配置
# ============================================================================

# 最大飞行高度（米）
UAV_MAX_ALTITUDE=120

# 最大飞行速度（米/秒）
UAV_MAX_SPEED=15

# 最低电量警告（%）
UAV_MIN_BATTERY=20

